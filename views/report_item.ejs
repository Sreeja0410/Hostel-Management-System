<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Make site responsive on mobile/tablet -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Report Lost-Found Item</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700|Roboto:400,500" rel="stylesheet">
    <style>
        /* General page styling */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f7fa;
            color: #333;
            font-size: 1rem;
            margin: 0;
        }
        /* Container styling */
        .container {
            max-width: 700px;
            margin: 5% auto;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }
        /* Heading styling */
        h1 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #2c3e50;
            text-align: center;
            margin-bottom: 30px;
            font-family: 'Montserrat', sans-serif;
        }
        /* Form styling */
        .form-group label {
            font-size: 1.2rem;
            font-weight: 500;
            color: #2c3e50;
            margin-bottom: 5px;
        }
        .form-control {
            font-size: 1.1rem;
            padding: 8px;
            border: 1px solid #dcdfe3;
            border-radius: 5px;
            transition: border-color 0.3s ease;
        }
        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 5px rgba(52, 152, 219, 0.3);
        }
        /* Button styling */
        .btn-primary {
            background-color: #3498db;
            border: none;
            font-size: 1.3rem;
            font-weight: 600;
            padding: 12px 0;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            color: #fff;
        }
        .btn-primary:hover {
            background-color: #2980b9;
        }
        /* Back button styling */
        .back-button {
            display: inline-block;
            margin-top: 20px;
            font-size: 1rem;
            text-decoration: none;
            color: #3498db;
            font-weight: 500;
            text-align: center;
            transition: color 0.3s ease;
        }
        .back-button:hover {
            color: #2980b9;
        }
    </style>
</head>
<body>

<div class="container">
    <h1>Report <%= type.charAt(0).toUpperCase() + type.slice(1) %> Item</h1>
    <div>
        <form action="/lostandFound/<%= type %>/<%= student._id %>" method="POST" enctype="multipart/form-data">
            <!-- Item Name -->
            <div class="form-group">
                <label for="item-name">Item Name</label>
                <input type="text" class="form-control" id="item-name" name="item" placeholder="Enter the name of the lost item" required>
            </div>
            <!-- Item Description -->
            <div class="form-group">
                <label for="item-description">Description</label>
                <textarea class="form-control" id="item-description" name="description" rows="4" placeholder="Provide details about the lost item" required></textarea>
            </div>
            <!-- Hostel Selection -->
            <div class="form-group">
                <label for="hostel">Select Hostel</label>
                <select class="form-control" id="hostel" name="hostel" required>
                    <option value="Rosaline">Rosaline</option>
                    <option value="Jasper">Jasper</option>
                    <option value="Amber">Amber</option>
                    <option value="Aquamarine">Aquamarine</option>
                </select>
            </div>
            <!-- Upload Image -->
            <div class="form-group">
                <label for="item-image">Upload Image (Optional)</label>
                <input type="file" class="form-control" id="item-image" name="image" accept="image/*">
            </div>
            <!-- Submit Button -->
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Report Item</button>
            </div>
        </form>
        <!-- Back Button -->
        <a href="javascript:window.history.back()" class="back-button"><i class="fas fa-arrow-left"></i> Back to Home</a>
    </div>
</div>

</body>
</html>
