<!DOCTYPE html>
<html lang="en">
<head>
  <title>Admin Dashboard</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
  
  <style>
    body {
      font-family: 'Ubuntu', sans-serif;
      font-size: 1.5rem;
      height: 100vh;
      margin: 0;
      background-color: #f4f4f4;
    }
    .header {
      background-color: #002147;
      padding: 2rem;
      text-align: center;
      color: white;
      font-size: 2.5rem;
      font-weight: bold;
    }
    .tab-content {
      margin-top: 40px;
    }
    .activities-container {
      display: flex;
      height: 60vh;
      background-color: #f9f9f9;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }
    .activities-menu {
      width: 25%;
      padding: 20px;
      background-color: #f1f1f1;
      border-right: 1px solid #ddd;
      display: flex;
      flex-direction: column;
      gap: 15px;
    }
    .activity-button {
      padding: 15px;
      font-size: 1.5rem;
      text-align: center;
      background-color: #002147;
      color: white;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.2s ease;
    }
    .activity-button:hover {
      background-color: #1a3b6e;
    }
    .activity-content {
      width: 75%;
      padding: 25px;
      overflow-y: auto;
      display: none;
    }
    .activity-content.active {
      display: block;
    }
  </style>
</head>

<body>
  <div class="header">Admin Dashboard</div>

  <div class="container">
    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#activities"><i class="fas fa-tasks"></i> Activities</a></li>
      <li><a href="/logout"><i class="fas fa-sign-out-alt"></i> Log Out</a></li>
    </ul>

    <div class="tab-content">
      <div id="activities" class="tab-pane fade in active">
        <h3 class="text-center">Admin Activities</h3>
        <div class="activities-container">
          <!-- Left Column: Buttons -->
          <div class="activities-menu">
            
            <div class="activity-button" onclick="showActivity('leave')">Leave Applications</div>
            <div class="activity-button" onclick="showActivity('complaints')">Student Complaints</div>
            <div class="activity-button" onclick="showActivity('feedbacks')">Student Feedbacks</div>
            <div class="activity-button" onclick="showActivity('notices')">Circulate Notices</div>
          </div>
          
           <div id="leave" class="activity-content">
            <h4>Leave Applications</h4>
            <div class="leave-buttons">
              <a href="/admin/leaves/Rosaline" class="btn btn-primary btn-lg btn-block">Rosaline</a>
            <a href="/admin/leaves/Jasper" class="btn btn-primary btn-lg btn-block">Jasper</a>
            <a href="/admin/leaves/Amber" class="btn btn-primary btn-lg btn-block">Amber</a>
            <a href="/admin/leaves/Aquamarine" class="btn btn-primary btn-lg btn-block">Aquamarine</a>
            </div>
          </div>

          <div id="complaints" class="activity-content">
            <h4>Student Complaints</h4>
            <div class="leave-buttons">
              <a href="/admin/complaints/Rosaline" class="btn btn-primary btn-lg btn-block">Rosaline</a>
            <a href="/admin/complaints/Jasper" class="btn btn-primary btn-lg btn-block">Jasper</a>
            <a href="/admin/complaints/Amber" class="btn btn-primary btn-lg btn-block">Amber</a>
            <a href="/admin/complaints/Aquamarine" class="btn btn-primary btn-lg btn-block">Aquamarine</a>
            </div>
          </div>

          <!-- Right Column: Activity Content -->
          <div id="feedbacks" class="activity-content">
            <h4>Student Feedbacks</h4>
            <div class="feedback-buttons">
              <a href="/admin/feedbacks/Rosaline" class="btn btn-primary btn-lg btn-block">Rosaline</a>
                <a href="/admin/feedbacks/Jasper" class="btn btn-primary btn-lg btn-block">Jasper</a>
                <a href="/admin/feedbacks/Amber" class="btn btn-primary btn-lg btn-block">Amber</a>
                <a href="/admin/feedbacks/Aquamarine" class="btn btn-primary btn-lg btn-block">Aquamarine</a>
            </div>
          </div>
          
          <div id="notices" class="activity-content">
              <h4>Circulate Notices</h4>
              <form action="/admin/circulate/<%= uid %>" method="POST">
                <div class="form-group">
                  <label for="notice">Notice:</label>
                  <textarea id="notice" name="notice" class="form-control" rows="4" required></textarea>
                </div>
                <div class="form-group">
                  <label for="hostel">Hostel:</label>
                  <select id="hostel" name="hostel" class="form-control" required>
                    <option value="Rosaline">Rosaline</option>
                    <option value="Jasper">Jasper</option>
                    <option value="Amber">Amber</option>
                    <option value="Aquamarine">Aquamarine</option>
                  </select>
                </div>
                <button type="submit" class="btn btn-success btn-block">Send Notice</button>
              </form>
            </div>
        </div>
      </div>
    </div>
  </div>

  <script>
   document.addEventListener('DOMContentLoaded', function() {
    showActivity('leave');
  });
    function showActivity(activity) {
      const activities = document.querySelectorAll('.activity-content');
      activities.forEach(function(content) {
        content.classList.remove('active');
      });

      const activeActivity = document.getElementById(activity);
      if (activeActivity) {
        activeActivity.classList.add('active');
      }
    }
  </script>

</body>
</html>
