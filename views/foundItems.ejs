<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Found Items</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-color: #f9f9f9;
        }

        .main-container {
            max-width: 900px;
            margin: 30px auto;
            text-align: center;
        }

        h1 {
            font-size: 36px;
            color: #333;
            margin-bottom: 30px;
        }

        .section-container {
            max-width: 900px;
            margin: 20px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .section-heading {
            font-size: 26px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #333;
        }

        .items-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .item-card {
            width: 220px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .item-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .item-image {
            width: 100%;
            height: 150px;
            object-fit: cover;
            background-color: #f4f4f4;
        }

        .item-details {
            padding: 10px;
            text-align: center;
        }

        .item-details h2 {
            font-size: 16px;
            font-weight: bold;
            color: #333;
            margin: 5px 0;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .item-details p {
            font-size: 14px;
            color: #555;
            margin: 5px 0;
            height: 38px;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .no-items {
            text-align: center;
            color: #777;
            font-size: 18px;
            margin-top: 20px;
        }

        .back-btn {
            margin-top: 20px;
            padding: 12px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            text-align: center;
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Heading -->
        <h1>Found Items</h1>

        <!-- Items Section -->
        <div class="section-container">
            <h2 class="section-heading">Found Items</h2>

            <div class="items-list">
                <% if (!foundItems || foundItems.length === 0) { %>
                    <p class="no-items">No found items available.</p>
                <% } else { %>
                    <% foundItems.forEach(item => { %>
                        <div class="item-card">
                            <img 
                                src="<%= item.image && item.image.trim() ? item.image : 'https://tse1.mm.bing.net/th?id=OIP.UYefmuqvYGCqQqZN9xaW8QHaGp&pid=Api&P=0&h=180' %>" 
                                alt="<%= item.item %>" 
                                class="item-image"
                            >
                            <div class="item-details">
                                <h2><%= item.item %></h2>
                                <p><%= item.description %></p>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>

        <!-- Back to Lost Items Button -->
        <div>
            <button 
                onclick="location.href='/home/student/<%= student ? student._id : '' %>'" 
                class="back-btn"
            >
                Back to Home
            </button>
        </div>
    </div>
</body>
</html>
